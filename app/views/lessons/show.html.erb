<div class="container">
  <div class="row">
   <div class="banner-content">
    <h1 class="text-center"><%= @lesson.name %></h1>
  </div>
  <div class="col-xs-6">
    <div class="banner" style="background-image: url(<%= image_path @lesson.picture %>);">
    </div>
    <div class="your-brush-options text-center">
      <div class="btn btn-custom text-center">
        <%= link_to "Book", new_lesson_booking_path(@lesson) %>
      </div>
    </div>
  </div>
  <div class="description-text col-xs-6">
    <div class="lesson-description">
      <h2><strong>Class description:</strong></h2>
      <p><%= @lesson.description %></p>
      <div class="lesson-information">
        <div class="lesson-price">
          <h4><strong>Length of course: </strong><%= @lesson.timing %></h4>
        </div>
        <div class="lesson-time">
          <h4><strong>Price:</strong> <%= @lesson.pricing %> EUR</h4>
        </div>
      </div>
      <div class="teacher-info">
        <div class="teacher-name">
          <h2><strong>About the teacher:</strong></h2>
          <h4><strong>Name:</strong> <%= @teacher.naming %></h4>
        </div>
        <div class="teacher-background">
          <h4><strong>Background:</strong></h4>
          <p><%= @teacher.background %></p>
        </div>
      </div>
    </div>
  </div>
</div>

