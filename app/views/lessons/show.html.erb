      </div>
      <div class="time">
        <h4>Price: <strong> <%= @lesson.pricing %> EUR </strong></h4>
      </div>
    </div>
    <h2>Class description:</h2>
    <p><%= @lesson.description %></p>
    <h2>About the teacher:</h2>
    <h4>Name: <strong> <%= @teacher.naming %></strong></h4>
    <h4>Background:</h4>
    <p><%= @teacher.background %></p>
