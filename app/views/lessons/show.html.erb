<div class="container">
  <div class="row">
   <div class="banner-content">
    <h1 class="text-center"><%= @lesson.name %></h1>
  </div>
  <div class="col-xs-6">
    <div class="banner" style="background-image: url(<%= image_path @lesson.picture %>);">
    </div>

    <div class="your-brush-options text-center">
      <%# if user_signed_in? %>
      <%# if policy(@toothbrush).edit? %>

      <div class="btn btn-custom text-center">
        <%= link_to "Book", new_lesson_booking_path(@lesson) %>
      </div>
      <%# end %>
      <%# else %>

      <%# end %>
    </div>
  </div>

  <div class="description-text col-xs-6">
    <div class="information">
      <div class="price">
