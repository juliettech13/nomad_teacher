<h1>Purchase of <%= @lesson.name %></h1>
<%= form_tag lesson_booking_payments_path(@lesson, @booking) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Lesson"
    data-email="<%= current_user.email %>"
    data-description="Lesson <%= @booking.lesson_sku %>"
    data-amount="<%= @booking.amount_cents %>"
    data-currency="<%= @booking.amount.currency %>">var stripe = Stripe('pk_test_ot3bGdaUqNHSFutSUjKaJ6jV');</script>
<% end %>


